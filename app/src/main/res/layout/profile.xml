<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/border"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/l"/>
    <TextView
        android:id="@+id/name_profile"
        android:textColor="@color/textColorPrimary"
        android:text="YOUR NAME"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/username_profile"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textColorPrimary"
        android:text="YOUR USERNAME"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/phone_profile"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textColorPrimary"
        android:text="+91 9880000000"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="@color/textColorPrimary"
        android:text="Reward Count"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/silverCoins_profile"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/currency_dollar"/>
        <TextView
            android:id="@+id/goldCoins_profile"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/currency_dollar_yellow"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="@color/textColorPrimary"
        android:text="LeaderBoard Details"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/textColorPrimary"
            android:text="College Rank: "
            android:textSize="20sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"/>
        <TextView
            android:id="@+id/collegeRank_profile"
            android:textColor="@color/textColorPrimary"
            android:text="NA"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/eventNamesWithRank_profile"
        android:layout_marginLeft="24dp"
        android:textColor="@color/textColorPrimary"
        android:text="Event A Rank:  NA"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/logout_profilepage"
        android:background="#81C3D7"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|right"
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </FrameLayout>