<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_registar_hackathon_textinputLayout"
            >
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/email_registar_hackathon" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skill_registar_hackathon_textinputLayout"
            >
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skills(Related to CSE/IT)"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/skill_registar_hackathon" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences for the Mentor"/>
        <Spinner
            android:background="#81C3D7"
            android:layout_marginTop="20dp"
            android:id="@+id/spinner_preference1"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:background="#81C3D7"
            android:layout_marginTop="20dp"
            android:id="@+id/spinner_preference2"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:background="#81C3D7"
            android:layout_marginTop="20dp"
            android:id="@+id/spinner_preference3"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            />
        <Button
            android:textColor="#01478C"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="#81C3D7"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/button_register_hackathon"/>
    </LinearLayout>
</ScrollView>
